FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/
COPY indexer ./indexer/
COPY tsconfig.json ./
COPY scripts ./scripts/

# Install dependencies
RUN npm ci

# Generate Prisma client
RUN npx prisma generate

# Run indexer
CMD ["npm", "run", "indexer"]
